{
  "name": "game-of-life",
  "version": "1.0.0",
  "description": "Conway's Game of Life - cellular automata",
  "default": "src/index.html",
  "scripts": {
    "start": "npm-run-all --parallel watch:sass serve:parcel",
    "watch:sass": "sass src/sass/main.scss src/css/style.css --watch",
    "serve:parcel": "parcel src/index.html",
    "build:parcel": "parcel build src/index.html --dist-dir ./dist",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 version\" src/css/style.css -o src/css/style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mofunkles/game-of-life.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mofunkles/game-of-life/issues"
  },
  "homepage": "https://github.com/Mofunkles/game-of-life#readme",
  "devDependencies": {
    "@netlify/plugin-sitemap": "^0.7.0",
    "autoprefixer": "^10.2.4",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.1",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.7"
  }
}
